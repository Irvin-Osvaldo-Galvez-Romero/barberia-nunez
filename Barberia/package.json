{
  "name": "barberia-app",
  "version": "1.0.0",
  "description": "Sistema de gestión para barbería",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron:dev && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:electron:dev": "tsc -p tsconfig.electron.json",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json && npm run copy:preload",
    "copy:preload": "node -e \"require('fs').copyFileSync('electron/preload.ts', 'dist-electron/preload.ts')\" || echo 'Preload will be compiled by tsc'",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "barberia",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "date-fns": "^3.0.6",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "8.4.35",
    "tailwindcss": "3.3.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}
